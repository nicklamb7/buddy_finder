<nav>
  <div class="left-section">
    <%= link_to "Buddy Finder", root_path, id: "logo" %>
  </div>
  <div class="middle-section d-flex">
    <div class="m-2">
    <%= form_tag profiles_path, method: :get do %>
      <%= text_field_tag :query, '',
      class: "form-control",
      placeholder: "Find a buddy"
      %>
      </div>
      <div class="m-2">
      <%= submit_tag "Search", class: "btn btn-primary search" %>
      </div>
    <% end %>
  </div>
  <div class="right-section">
    <div class="nav-btns"><%= link_to "Home", root_path %></div>
    <div class="nav-btns d-none d-sm-block"><%= link_to "Explore", profiles_path %></div>
    <% if !user_signed_in? %>
    <div class="nav-btns d-none d-sm-block"><%= link_to "Sign up", new_user_registration_path %></div>
    <% end %>
    <% if !user_signed_in? %>
      <div class="nav-btns"><%= link_to "Log in", new_user_session_path %></div>
    <% end %>
    <% if user_signed_in? %>
      <img class="avatar-large" alt="avatar-large" src="https://res.cloudinary.com/dxhrxhiwb/image/upload/v1629889921/dwayne_pcvf1e.jpg" />
    <% end %>
  </div>
</nav>
