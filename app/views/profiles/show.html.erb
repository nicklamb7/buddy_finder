<h1> <%= @profile.first_name %>'s profile page</h1>
<%= link_to 'Go back to all profiles', profiles_path, class: "btn btn-primary" %>

    <div class="container my-3">
      <div class="row">
        <div class="col-12 col-md-6 col-lg-8">

        <h1> <%= @full_name %> </h1>

          <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
              <div class="carousel-item active">
                <img src="<%= @profile.picture %>" class="d-block w-100" alt="...">
              </div>
              <div class="carousel-item">
                <img src="<%= @profile.picture %>" class="d-block w-100" alt="...">
              </div>
              <div class="carousel-item">
                <img src="<%= @profile.picture %>" class="d-block w-100" alt="...">
              </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
          </div>

          <br>
          <br>
          <div class="card" style="width: 500;">
            <ul class="list-group list-group-flush">
              <li class="list-group-item"><h2> Bio </h2></li>
              <li class="list-group-item"><%= @profile.bio %></li>
              <li class="list-group-item"><h2> Age </h2></li>
              <li class="list-group-item">
                <% if @age == nil %>
                  Prefer not to say
                <% else %>
                  <%= @age %>
                <% end %>
              </li>
              <li class="list-group-item"><h2> Interests </h2></li>
              <li class="list-group-item"><%= @profile.interests %></li>
              <li class="list-group-item"><h2> Location </h2></li>
              <li class="list-group-item"><%= @profile.location %></li>
            </ul>
          </div>

        </div>
          <br>
          <br>

        <div class="col-12 col-md-6 col-lg-4">
          <br>
          <br>

          <div class="row  justify-content-center p-2 booking-request">
            <h2>Send a booking request to this buddy</h2>
            <%= simple_form_for([@profile, @booking]) do |f| %>
            <%= f.error_notification %>
            <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

            <div class="form-inputs">
              <%= f.input :start_date, as: :string, input_html: {class: "datepicker"} %>
              <%= f.input :end_date, as: :string, input_html: {class: "datepicker"} %>
              <%= f.input :event_name %>
              <%= f.input :event_location %>
            </div>


              <div class="form-actions text-center">
              <button class ="btn btn-success m-3 "> <%= f.button :submit %> </button>
              </div>
            <% end %>
            <div class="d-flex justify-content-center">
              <div class="m-1">
              <%= link_to 'All bookings', profile_bookings_path(@profile), class: "pink-button" %>
              </div>
              <br>
            </div>
        </div>
      </div>
    </div>
  </body>
</html>
