<h1> <%= @profile.first_name %>'s profile page</h1>

    <div class="container my-3">
      <div class="row">
        <div class="col-12 col-md-6 col-lg-8">

        <h1> <%= @full_name %> </h1>

          <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
              <div class="carousel-item active">
                <img src="<%= @profile.picture %>" class="d-block w-100" alt="...">
              </div>
              <div class="carousel-item">
                <img src="<%= @profile.picture %>" class="d-block w-100" alt="...">
              </div>
              <div class="carousel-item">
                <img src="<%= @profile.picture %>" class="d-block w-100" alt="...">
              </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
          </div>

          <br>
          <br>

          <h2> Bio </h2>
          <p> <%= @profile.bio %> </p>
          <br>

          <h2> Age </h2>
          <p> <%= @profile.age %> </p>
          <br>

          <h2> Interests </h2>
          <p> <%= @profile.interests %> </p>

        </div>

        <div class="col-12 col-md-6 col-lg-4">
          <form action="#" class="border p-5">
            <h1>Send a booking request to this buddy</h1>

            <div class="form-group">
              <label for="#">Message</label>
              <input type="text" class="form-control" placeholder="type message here...">
            </div>

            <div class="form-group">
              <label for="#">Arrival</label>
              <input type="date" class="form-control" placeholder="say soemthing...">
            </div>

            <div class="form-group">
              <label for="#">Departure</label>
              <input type="date" class="form-control" placeholder="say soemthing...">
            </div>

            <input type="submit" class="btn btn-success w-100 mt-3">
          </form>

        </div>

      </div>



    </div>




  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-p34f1UUtsS3wqzfto5wAAmdvj+osOnFyQFpp4Ua3gs/ZVWx6oOypYoCJhGGScy+8" crossorigin="anonymous"></script>

  </body>
</html>
