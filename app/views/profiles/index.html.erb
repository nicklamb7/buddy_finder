<div class="profiles-page">
  <div class="profiles  col-12 col-lg-7">
  <% if @profiles.empty? %>
  <h2>Sorry, no matches found...</h2>
  <% else %>
  <h1>Profiles in Hoxton</h1>
    <ul>
      <% @profiles.each do |profile| %>
      <li>
        <div class="image-wrapper">
          <img src="<%= profile.picture %>" alt="">
        </div>
        <div class="profile-details">
          <h2><%= link_to profile.first_name.capitalize, profile_path(profile) %></h2>
          <p><%= profile.location.upcase %></p>
          <p>Interests: <%= profile.interests.capitalize %></p>
          <p class="rating"> <%= rand(1..5)%>/5<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star" viewBox="0 0 16 16">
            <path d="M2.866 14.85c-.078.444.36.791.746.593l4.39-2.256 4.389 2.256c.386.198.824-.149.746-.592l-.83-4.73 3.522-3.356c.33-.314.16-.888-.282-.95l-4.898-.696L8.465.792a.513.513 0 0 0-.927 0L5.354 5.12l-4.898.696c-.441.062-.612.636-.283.95l3.523 3.356-.83 4.73zm4.905-2.767-3.686 1.894.694-3.957a.565.565 0 0 0-.163-.505L1.71 6.745l4.052-.576a.525.525 0 0 0 .393-.288L8 2.223l1.847 3.658a.525.525 0 0 0 .393.288l4.052.575-2.906 2.77a.565.565 0 0 0-.163.506l.694 3.957-3.686-1.894a.503.503 0 0 0-.461 0z"/>
          </svg></p>
          <button>
            <%= link_to "Find out more", profile_path(profile) %>
          </button>
        </div>
      </li>
      <% end %>
    </ul>
    <% end %>
  </div>
  <div class="map d-none d-lg-block col-md-5">
    <div id="map"
     style="width: 100%; height: 100vh;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
</div>
