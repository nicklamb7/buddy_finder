<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Edit your profile: </h3>
        <%= simple_form_for [@profile] do |f| %>
          <%= f.input :first_name, placeholder: '@profile.id.first_name' %>
          <%= f.input :last_name, placeholder: '@profile.id.last_name' %>
          <%= f.input :birth_date, placeholder: '@profile.id.birth_date' %>
          <%= f.input :location, placeholder: '@profile.id.location' %>
          <%= f.input :bio, placeholder: '@profile.id.bio' %>
          <%= f.input :interests, placeholder: '@profile.id.interests' %>
          <%= f.input :picture, placeholder: '@profile.id.picture' %>
          <%= f.submit class: 'btn btn-flat' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
