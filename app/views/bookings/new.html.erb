
<div class="container mx-auto mt-5">
  <div class="row  justify-content-center">
    <div class="col-6">
    <h2>Add a booking</h2>
    <%= simple_form_for([@profile, @booking]) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs">
      <%= f.input :start_date, as: :string, input_html: {class: "datepicker"} %>
      <%= f.input :end_date,  as: :string, input_html: {class: "datepicker"} %>
      <%= f.input :event_location %>
      <%= f.input :event_name %>

    </div>

    <div class="form-actions">
    <button class ="btn btn-secondary m-3"> <%= f.button :submit %> </button>
    </div>
  <% end %>
  </div>
</div>
